#!/command/with-contenv bashio
# ==============================================================================
# Home Assistant Community Add-on: Network UPS Tools
# Take down the S6 supervision tree when powerman fails
# ==============================================================================
if [[ "${1}" -ne 0 ]] && [[ "${1}" -ne 256 ]]; then
  bashio::log.warning "powerman crashed, restarting..."
fi

bashio::log.info "powerman stopped, will restart if needed..."
